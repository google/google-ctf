set -euo pipefail

mount -t sysfs none /sys
mount -t proc none /proc

mkdir -p /dev/shm /dev/pts
mount -t tmpfs tmpfs /dev/shm
mount -t tmpfs tmpfs /tmp
mount -t devpts -o gid=4,mode=620 none /dev/pts

echo 1 > /proc/sys/kernel/kptr_restrict
echo 1 > /proc/sys/kernel/dmesg_restrict

insmod /ctf.ko

mkdir -p /tmp/userdata /tmp/exploit /tmp/share

mount -t 9p -o trans=virtio exploit /tmp/share -oversion=9p2000.L
cp /tmp/share/exploit.html /tmp/exploit/exploit.html

umount /tmp/share
rmdir /tmp/share

chmod 777 /tmp/userdata /tmp/exploit
chmod 644 /tmp/exploit/exploit.html

mknod -m 666 /dev/ctf c 385 0

su -c '/usr/bin/python3 /run_chromium.py' ctf
poweroff -f
